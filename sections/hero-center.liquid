<section class="hero-bva {% unless section.settings.content_alignment == blank %}flex-align-{{ section.settings.content_alignment }}{% endunless %}" data-section-id="{{ section.id }}">

    <div class="hero-bva-wrapper">
      {% unless section.settings.hero_title == blank %}
        <h1 class="hero-bva-title">{{ section.settings.hero_title }}</h1>
      {% endunless %}

      {% unless section.settings.hero_description == blank %}
        <p class="hero-bva-description">
          {{ section.settings.hero_description | escape }}
        </p>
      {% endunless %}

      {% unless section.settings.hero_btn_text == blank %}
        <a class="hero-bva-btn" href="{{ section.settings.hero_btn_link }}">{{ section.settings.hero_btn_text | escape }}</a>
      {% endunless %}
    </div>
</section>
<style>
  .hero-bva {
    {% unless section.settings.hero_image == blank %}
      background-image: url({{ section.settings.hero_image | img_url: 'master' }});
    {% endunless %}

    {% unless section.settings.bg_color == blank %}
      background-color: {{ section.settings.bg_color }};
    {% endunless %}
  }

  @media only screen and (max-width: 768px) {
    .hero-bva {
      {% unless section.settings.mobile_hero_image == blank %}
        background-image: url({{ section.settings.mobile_hero_image | img_url: 'master' }});
      {% endunless %}
    }
  }

</style>
{% schema %}
{
  "name": "Hero Center",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Hero Image",
      "info": "Please upload a high definition image as you background image"
    },
    {
      "type": "image_picker",
      "id": "mobile_hero_image",
      "label": "Mobile Hero Image",
      "info": "Please upload a high definition image as you mobile background image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#000080",
      "label": "Background Hero Color",
      "info": "In case there's no image available please select a background color"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        { "value": "center", "label": "Centered"},
        { "value": "left", "label": "Left"},
        { "value": "right", "label": "Right"}
      ],
      "label": "Content Alignment",
      "info": "Please decide the alignment of your content centered, left or right"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "info": "Please type in a valid"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description",
      "info": "Please add a valid hero description"
    },
    {
      "type": "text",
      "id": "hero_btn_text",
      "label": "Hero Button Text",
      "info": "Please add the proper button text"
    },
    {
      "type": "url",
      "id": "hero_btn_link",
      "label": "Hero Button Link",
      "info": "Select the button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Center",
      "category": "Content Banner"
    }
  ]
}
{% endschema %}